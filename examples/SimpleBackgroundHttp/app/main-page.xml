<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <GridLayout rows="*, auto">
    <ListView items="{{ $value }}">
		<ListView.itemTemplate>
			<GridLayout rows="auto, auto, auto" columns="auto, *">
				<Label margin="5" text="uploading:" />
				<Label col="1" margin="5" text="{{ upload, upload + ' / ' + totalUpload }}" />
				<Progress row="1" colSpan="2" margin="5" value="{{ upload }}" maxValue="{{ totalUpload }}" />
				<Label row="2" margin="5" text="{{ description }}" />
			</GridLayout>
		</ListView.itemTemplate>
    </ListView>
    <Button row="1" margin="5" text="Upload!" tap="upload" />
  </GridLayout>
</Page>